---
interface Props {
  packageName: string;
  price: string;
  details: string;
  detailsBold: string;
  dives: string;
}
const captainAlt = "GUIDED BOAT DIVE";
const sandwichAlt = "SANDWICHES";
const weightAlt = "WEIGHTS";
const waterAlt = "WATER";
const fruitAlt = "FRUIT";

const { packageName, price, details, detailsBold, dives } = Astro.props as Props;
---

<priceCard>
  <div class="main-card-wrapper">
    <div class="title">
      <h4>{packageName || ""}</h4>
    </div>
    <div class="content">
      <div class="price">
        <span>{price || ""}</span>
        <p>Make your own!</p>
      </div>
      <div class="description">
        {detailsBold ? (
                <div class="cdes"><p>{detailsBold}</p></div>
        ) : (
          <div class="newItemCol">
            <div class="item">
              <img class="icon" src="/captain.png" alt={captainAlt} />
              <p>{captainAlt}</p>
            </div>
            <div class="item">
              <img class="icon" src="/tank.png" alt={dives} />
              <p>{dives}</p>
            </div>
            <div class="item">
              <img class="icon" src="/sandwich.png" alt={sandwichAlt} />
              <p>{sandwichAlt}</p>
            </div>
            <div class="item">
              <img class="icon" src="/weight.png" alt={weightAlt} />
              <p>{weightAlt}</p>
            </div>
            <div class="item">
              <img class="icon" src="/water.png" alt={waterAlt} />
              <p>{waterAlt}</p>
            </div>
            <div class="item">
              <img class="icon" src="/fruit.png" alt={fruitAlt} />
              <p>{fruitAlt}</p>
            </div>
          </div>
        )}
      </div>
      
      <div class="policy">
        <p>{details || "Have any questions? Please let us know, we'd be happy to answer."}</p>
      </div>
    </div>
    <div class="cta">
      <a href="/Booking">Book Now</a>
    </div>
  </div>
</priceCard>


<style>
  .main-card-wrapper {
    height: fit-content;
    min-height: 510px;
    max-width: 400px;
    overflow: hidden;
    border-radius: 15px;
    background-color: #ead91a;
  }
  .title {
    width: 100%;
    padding: 2rem 0;
    font-weight: bold;
    font-size: xx-large;
    text-align: center;
    color: #fff;
    background-color: #d90b16;
  }
  .content {
    display: flex;
    color: #0b0b0b;
    min-height: 100%;
    height: fit-content;
    flex-direction: column;
    justify-content: space-between;
  }
  .price {
    width: 100%;
    display: flex;
    padding: 1rem;
    color: #581515;
    text-align: center;
    align-items: center;
    flex-direction: column;
    justify-content: center;
  }
  .price span {
    font-size: xxx-large;
    font-weight: bolder;
  }
  .price p {
    font-weight: bold;
    font-size: x-large;
  }
  .description {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    padding: 1rem 3rem;
  }
  .cDes p {
    font-weight: bolder;
    font-size: xx-large;
  }
  .item {
    display: flex;
    align-items: center;
    flex-direction: row;
    justify-content: center;
    padding: 0.3rem 0rem;
  }
  .newItemCol {
    display: flex;
    flex-direction: column;
    align-items: start;
  }
  .icon {
    width: 50px;
  }
  .item p {
    padding-left: 1rem;
  }
  .policy {
    color: #581515;
    padding: 1rem 2rem;
  }
  .cta {
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
    padding: 2rem;
  }
  .cta a {
    font-weight: bold;
    width: fit-content;
    font-size: larger;
    padding: 1rem 3rem;
    border-radius: 15px;
    color: white;
    background-color: #0b0b0b;
  }
  .cta a:hover {
    background-color: #d90b16;
    color: white;
  }
</style>
