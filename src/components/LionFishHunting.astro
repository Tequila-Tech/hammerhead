---
import { Image } from "astro:assets";
import MainCtaBtn from "../components/MainCtaBtn.astro";
interface Props {
  title: string;
  content: string;
  content2: string;
}
const { title, content, content2 } = Astro.props;
const alt = "Photo of a reef with a clown fish coming out";
---

<div class="most-requested-wrapper">
  <div class="wrapper">
    <div class="content">
      <h4 class="title">{title}</h4>
      <p>{content}</p>
      <p>{content2}</p>
      <div class="CTA">
        <MainCtaBtn />
      </div>
    </div>
    <div class="image">
      <Image
        width="200"
        height="150"
        format="webp"
        class="image-item"
        src="/lionFish.jpg"
        alt={alt}
      />
    </div>
  </div>
</div>
<style>
  .most-requested-wrapper {
    background-color: #272626;
    color: #fff;
  }
  .wrapper {
    display: flex;
    padding: 5rem 2rem;
    gap: 2rem;
  }
  .content {
    flex: 1;
    gap: 2rem;
    display: flex;
    padding: 3rem;
    flex-direction: column;
  }
  .title {
    font-size: xxx-large;
    font-weight: bolder;
  }
  .content p {
    font-size: large;
  }
  .image {
    flex: 1;
  }
  .image-item {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 15px;
  }
  @media (max-width: 720px) {
    .wrapper {
      flex-direction: column;
      padding: 2rem 1rem;
    }
    .content {
      padding: 3rem 0;
    }
  }
</style>
