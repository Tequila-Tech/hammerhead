---
import { Image } from "astro:assets";

interface Props {
  packageName: string;
  title: string;
  details: string;
  detailsBold: string;
}
const { packageName, title, details, detailsBold } = Astro.props;
---

<priceCard>
  <div class="main-card-wrapper">
    <div class="title">
      <h4>{packageName}</h4>
    </div>
    <div class="content">
      <div class="price">
        <span>{title}</span>
      </div>
      <div class="description">
        <p>{details}</p>
        <br />
        <p class="detailsBold">{detailsBold}</p>
      </div>
      <div class="policy">
        <p>Have any questions please let us know, we'd be happy to answer</p>
      </div>
    </div>
    <div class="cta">
      <a href="/Booning">Book Now</a>
    </div>
  </div>
</priceCard>

<style>
  .main-card-wrapper {
    height: fit-content;
    max-width: 400px;
    overflow: hidden;
    border-radius: 15px;
    background-color: #ead91a;
  }
  .title {
    width: 100%;
    padding: 2rem 0;
    font-weight: bold;
    font-size: xx-large;
    text-align: center;
    color: #fff;
    background-color: #000000;
  }
  .content {
    gap: 1rem;
    display: flex;
    color: #0b0b0b;
    min-height: 100%;
    height: fit-content;
    flex-direction: column;
    justify-content: space-between;
  }
  .price {
    width: 100%;
    display: flex;
    padding: 1rem;
    color: #581515;
    text-align: center;
    align-items: center;
    flex-direction: column;
    justify-content: center;
  }
  .price span {
    font-size: xx-large;
    font-weight: bolder;
  }
  .price p {
    font-weight: bold;
    font-size: x-large;
  }
  .description {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    padding: 1rem 3rem;
  }
  .description p {
    font-size: large;
  }
  .description .detailsBold {
    font-size: x-large;
    color: #000000;
    font-weight: bold;
  }
  .item {
    display: flex;
    align-items: center;
    flex-direction: row;
    justify-content: center;
    padding: 0.3rem 0rem;
  }
  .icon {
    width: 50px;
  }
  .item p {
    padding-left: 1rem;
  }
  .policy {
    color: #581515;
    padding: 1rem 2rem;
    font-weight: bold;
  }
  .cta {
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
    padding: 2rem;
  }
  .cta a {
    font-weight: bold;
    width: fit-content;
    font-size: larger;
    padding: 1rem 3rem;
    border-radius: 15px;
    color: white;
    background-color: #0b0b0b;
  }
  .cta a:hover {
    background-color: #d90b16;
    color: white;
  }
</style>
