---
import { Image } from "astro:assets";
import image1 from "./miniGallery/image1.jpeg";
import image2 from "./miniGallery/image2.jpg";
import image3 from "./miniGallery/image3.webp";
import image4 from "./miniGallery/image4.jpeg";
import image5 from "./miniGallery/image5.jpeg";
---

<miniGallery>
  <div class="wrapper">
    <Image
      class="image"
      src={image1}
      alt="boy and girl snorkeling at el cielo reef in cozumel"
    />
    <Image
      class="image"
      src={image2}
      alt="two people snorkeling but camera is also showing above water level"
    />
    <Image
      class="image"
      src={image3}
      alt="girl snorkeling down to a reef in Cozumel Mexico's blue water"
    />
    <Image
      class="image"
      src={image4}
      alt="Girl snorkeling next to a sea turtle in Cozumel's turtle reel"
    />
    <Image
      class="image"
      src={image5}
      alt="Guy snorkels with large school of fish looks at camera and says hi"
    />
  </div>
</miniGallery>
<style>
  .wrapper {
    gap: 2rem;
    padding: 2rem;
    display: flex;
    overflow-x: scroll;
    align-items: center;
    flex-direction: row;
    justify-content: center;
  }
  .wrapper .image {
    max-height: 400px;
  }
</style>
