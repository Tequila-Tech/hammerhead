---
import MainCtaBtn from "../components/MainCtaBtn.astro";
interface props {
  title: string;
  image: string;
  content: string;
  alt: string;
}
const { title, content, image, alt } = Astro.props;
---

<div class="most-requested-wrapper">
  <div class="wrapper">
    <div class="content">
      <h4 class="title">{title}</h4>
      <p>{content}</p>
      <div class="CTA">
        <MainCtaBtn />
      </div>
    </div>
    <div class="image">
      <img
        class="image-item"
        src={image ?? "/mostRequestedReef.jpg"}
        alt={alt ?? "Photo of a reef with a clown fish coming out"}
      />
    </div>
  </div>
</div>
<style>
  .most-requested-wrapper {
    background-color: white;
  }
  .wrapper {
    display: flex;
    padding: 2rem;
    gap: 2rem;
  }
  .content {
    flex: 1;
    gap: 2rem;
    display: flex;
    padding: 3rem;
    flex-direction: column;
    justify-content: center;
  }
  .title {
    font-size: xxx-large;
    font-weight: bolder;
  }
  .content p {
    font-size: large;
  }
  .image {
    flex: 1;
  }
  .image-item {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 15px;
  }
  @media (max-width: 720px) {
    .wrapper {
      flex-direction: column;
      padding: 2rem 1rem;
    }
    .content {
      padding: 3rem 0;
    }
  }
</style>
