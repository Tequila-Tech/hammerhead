---
import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.jsx";
import { renderToString } from "react-dom/server";
import App from "../components/App.jsx";

interface Props {
  title: string;
}

const { title } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Hammer Head Cozumel Scuba diving and snorkel shop"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <link rel="icon" href="/snorkel2.webp" type="image" />
    <link rel="apple-touch-icon" sizes="180x180" href="/snorkel2.webp" />
    <link rel="icon" type="image/png" sizes="32x32" href="/snorkel2.webp" />
    <link rel="icon" type="image/png" sizes="16x16" href="/snorkel2.webp" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>    
    <div class="body-wrapper">
      <Nav client:load />
      <slot />
      <Footer />
    </div>
    <style is:global>
      :root {
        --accent: 136, 58, 234;
        --accent-light: 224, 204, 250;
        --accent-dark: 49, 10, 101;
        --accent-gradient: linear-gradient(
          45deg,
          rgb(var(--accent)),
          rgb(var(--accent-light)) 30%,
          white 60%
        );
      }
      html {
        font-family: system-ui, sans-serif;
        background: #13151a;
        background-size: 224px;
      }
      code {
        font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
          DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
      }
      body {
        margin: 0;
      }
      .body-wrapper {
        max-width: 1680px;
        margin: 0 auto;
      }
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
    </style>
  </body>
</html>